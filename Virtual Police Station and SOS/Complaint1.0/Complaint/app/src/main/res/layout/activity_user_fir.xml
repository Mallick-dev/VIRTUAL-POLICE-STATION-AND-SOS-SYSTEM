<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserFir">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="RAISE FIR" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Register Your Complaint Here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/test"
        android:layout_gravity="center"
        android:layout_margin="25dp"/>

    <Spinner
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/complanitTypeSpinner"
        android:background="@color/white"
        android:layout_margin="25dp"
        android:entries="@array/ComplaintList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Subject Line :  "/>
        <EditText
            android:id="@+id/etSubject"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Description "/>
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Place "/>
        <EditText
            android:id="@+id/etPlace"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Date "/>
        <EditText
            android:id="@+id/etDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="dd/mm/yyyy"
            android:text=""/>
    </LinearLayout>


    <Button
        android:id="@+id/btnEnterComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Update"/>

</LinearLayout>